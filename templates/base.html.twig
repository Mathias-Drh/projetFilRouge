<!DOCTYPE html>
<html>
<head>
    {% block head %}
    <meta charset="UTF-8">
    <title>{% block navTitle %}Welcome to the Hunt Community Website!{% endblock %}</title>
    <link href="{{ asset('css/style.css') }}" rel="stylesheet" />
    <script type="text/javascript" src="src/javascript.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
    {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    {% endblock %}
</head>
<body onload="getPics()">
{% block title %}
    <div class="image-title">
        <a href="{{ path('app_index') }}">
            <img src="../../assets/800px-Hunt_Showdown_Logo.png" width="470" height="300">
        </a>
        <hr>
        <h2>COMMUNITY WEBSITE</h2>
    </div>
{% endblock %}
<div id="nav">
    {% block nav %}
        <nav class="navbar">
            <div class="dropdown">
                <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="../../assets/menu.png" width="25" height="25">
                </a>

                <ul class="dropdown-menu dropdown-menu-dark">
                    {% if is_granted('IS_AUTHENTICATED_REMEMBERED') %}
                        {% if is_granted('ROLE_ADMIN') %}
                            <li><a class="dropdown-item" href="{{ path('app_admin') }}">Admin control panel</a></li>
                        {% endif %}
                    <li><a class="dropdown-item" href="{{ path('app_profil') }}">Your profile</a></li>
                    <li><a class="dropdown-item" href="#">Your stats</a></li>
                    {% else %}
                    <li><a class="dropdown-item" href="{{ path('app_login') }}">Login</a></li>
                    <li><a class="dropdown-item" href="{{ path('app_inscription') }}">Sign in</a></li>
                    {% endif %}
                    <li><a class="dropdown-item" href="{{ path('app_all_posts') }}">All the posts</a></li>
                    <li><a class="dropdown-item" href="#">All the patch notes</a></li>
                    <li><a class="dropdown-item" href="#">Bestiary</a></li>
                    <li><a class="dropdown-item" href="#">Weapons and Equipment</a></li>
                </ul>
            </div>
        </nav>
    {% endblock %}
</div>
<div id="content" class="content">
    <button type="button" class="btn btn-secondary" value="Cancel" onclick="history.back();">Go back</button>
    {% block content %}
    {% endblock %}
</div>
<div id="fullpage" onclick="this.style.display='none';"></div>
</body>
<footer>
    {% block footer %}
        &copy; Copyright 2022 by <a href="https://www.huntshowdown.com/">Hunt Showdown</a>.
    {% endblock %}
</footer>
</html>
