{% extends 'base.html.twig' %}

{% block content %}
    <h3 class="postTitle">MANAGE POSTS</h3>
    {% if posts %}
        <div class="card-display">
            {% for post in posts %}
                <div class="card" style="width: 20rem; height: 22rem;">
                    {% if post.img %}
                        <img src="{{ post.img }}" class="card-img-top" alt="image">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ post.titre }}</h5>
                        <p class="card-text">{{ post.description }}</p>
                        <div class="card-content-layout">
                            <a href="{{ path('app_one_post', {id:post.id}) }}" class="btn btn-primary">read more</a>
                            <span class="upvote">
                    <img src="../../assets/upvote.png" width="15" height="15">
                    126
                    </span>
                            <span class="comment">
                    <img src="../../assets/comment.png" width="15" height="15">
                    16
                    </span>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-light" role="alert">
            No post was found, or there is a problem with the DB... See for yourself :)
        </div>
    {% endif %}
    <a type="button" class="btn btn-primary" href="{{ path('app_admin_post_add') }}">Add a post</a>
    <h3 class="postTitle">MANAGE USERS</h3>
    {% if users %}
        <div class="card-display">
            {% for user in users %}
                <div class="card" style="width: 20rem; height: 22rem;">
                    <div class="card-body">
                        <h5 class="card-title">{{ user.firstName }}</h5>
                        <h5 class="card-title">{{ user.lastName }}</h5>
                        <p class="card-text">the mail of this user is <b>{{ user.email }}</b></p>
                        <div class="card-content-layout">
                            <a href="{{ path('app_admin_user_edit', {id:user.id}) }}" class="btn btn-primary">EDIT</a>
                            <a href="{{ path('app_admin_user_delete', {id:user.id}) }}" class="btn btn-danger">REMOVE</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    {% else %}
        <div class="alert alert-light" role="alert">
            No user was found, or there is a problem with the DB... See for yourself :)
        </div>
    {% endif %}
    <a type="button" class="btn btn-primary" href="{{ path('app_admin_user_add') }}">Add an user</a>
{% endblock %}
